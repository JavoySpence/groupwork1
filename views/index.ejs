<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="forms.ejs">

    <style>
        table {
          /* border: collapse; */
          width: 50%;
        }

        th, td {
          border: 1px;
          padding: 8px;
          text-align: left;
        }
    </style>
</head>
<body>
    <table>
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Class</th>
                <th>Book Name</th>
                <th>Book ISBN</th>
                <th>Book Author</th>
                <th>Borrowed Date</th>
                <th>Returned Date</th>
            </tr>
        </thead>
        <tbody>
            <% data.forEach(student => { %>
                <tr>
                    <td><%= student.id %></td>
                    <td><%= student.stud_name %></td>
                    <td><%= student.class %></td>
                    <td><%= student.book_name %></td>
                    <td><%= student.book_isbn %></td>
                    <td><%= student.book_author %></td>
                    <td><%= student.borrowed_date %></td>
                    <td><%= student.return_date %></td>
                    <td>
                        <a href="/updateData/<%= student.id %>">Update</a>
                        <a href="/delete/<%= student.id %>">Delete</a>

                    </td>
                </tr>
            <% }); %>
            
        </tbody>
    </table>
    
    
</body>
</html  